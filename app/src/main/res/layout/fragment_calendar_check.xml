<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.CalendarCheckFragment">

        <CalendarView
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:layout_constraintTop_toBottomOf="@+id/calendar"
            app:cardCornerRadius="10dp" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_calendar_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2023년 7월 31일"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp" />


                <TextView
                    android:id="@+id/tv_calendar_className_Text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수업명: "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_calendar_date"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp" />

                <TextView
                    android:id="@+id/tv_calendar_className"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="졸작"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@id/tv_calendar_className_Text"
                    app:layout_constraintTop_toTopOf="@+id/tv_calendar_className_Text" />

                <TextView
                    android:id="@+id/tv_calendar_professorName_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="교수명: "
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_calendar_className_Text"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/tv_calendar_professorName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="홍길동"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintStart_toEndOf="@id/tv_calendar_professorName_text"
                    app:layout_constraintTop_toTopOf="@+id/tv_calendar_professorName_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="출석 결과: 출석"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    app:layout_constraintTop_toBottomOf="@+id/tv_calendar_professorName_text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_margin="10dp"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>